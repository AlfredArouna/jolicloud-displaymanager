[internals]
lockfile=/var/run/jolicloud-displaymanager.pid
logfile=/var/log/jolicloud-displaymanager.log

[xserver]
xauth=/usr/bin/xauth
xauthfile=/var/run/jolicloud-displaymanager.auth
xserver=/usr/bin/X11/X
xserverargs=-verbose -nolisten tcp vt01
sessreg=/usr/bin/sessreg

[theme]
url=file:///usr/share/jolicloud-displaymanager/themes/default/index.html

[user]
path=/usr/local/sbin:/usr/local/bin:/usr/bin/X11:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games
logincmd=exec /bin/bash -login /etc/X11/Xsession default

[guestmode]
enabled=true
login=guest
group=guests
logincmd=

[autologin]
enabled=true
login=rno
